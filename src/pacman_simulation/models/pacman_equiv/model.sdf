<?xml version="1.0" encoding="utf-8"?>

<sdf version="1.5">
  <model name="pacman_equiv">
    <static>false</static>

    <link name="chassis">
      <visual name="visual">
	<geometry>
	  <mesh>
	    <uri>model://pacman_equiv/meshes/chassis.dae</uri>
	  </mesh>
	</geometry>
	<material>
	  <script>
	    <uri>model://pacman_equiv/meshes/chassis.dae</uri>
	  </script>
	</material>
      </visual>
      <inertial>
	<mass>60</mass>
      </inertial>
    </link>
    
    <link name="left_wheel">
      <pose> 0 .526654776 0 0 0 0 </pose>
      <collision name="collision">
	<geometry>
	  <mesh>
	    <uri>model://pacman_equiv/meshes/wheel.dae</uri>
	  </mesh>
	</geometry>
	<surface>
	  <friction>
	    <ode>
	      <mu>15000</mu>
	      <mu2>5000</mu2>
	    </ode>
	  </friction>
	</surface>
      </collision>
      <visual name="visual">
	<geometry>
	  <mesh>
	    <uri>model://pacman_equiv/meshes/wheel.dae</uri>
	  </mesh>
	</geometry>
	<material>
	  <script>
	    <uri>model://pacman_equiv/meshes/wheel.dae</uri>
	  </script>
	</material>
      </visual>
    </link>

    <link name="right_wheel">
      <collision name="collision">
	<geometry>
	  <mesh>
	    <uri>model://pacman_equiv/meshes/wheel.dae</uri>
	  </mesh>
	</geometry>
	<surface>
	  <friction>
	    <ode>
	      <mu>15000</mu>
	      <mu2>5000</mu2>
	    </ode>
	  </friction>
	</surface>
      </collision>
      <visual name="visual">
	<geometry>
	  <mesh>
	    <uri>model://pacman_equiv/meshes/wheel.dae</uri>
	  </mesh>
	</geometry>
	<material>
	  <script>
	    <uri>model://pacman_equiv/meshes/wheel.dae</uri>
	  </script>
	</material>
      </visual>
    </link>
    
    <link name="front_ball">
      <pose> 0.21364702 0 -0.076556616 0 0 0 </pose>
      <collision name="collision">
	<geometry>
	  <sphere>
	    <radius>0.075486641</radius>
	  </sphere>
	</geometry>
	<surface>
	  <friction>
	    <ode>
	      <mu>15000</mu>
	      <mu2>5000</mu2>
	    </ode>
	  </friction>
	</surface>
      </collision>
    </link>

    <link name="back_ball">
      <pose> -0.21364702 0 -0.076556616 0 0 0 </pose>
      <collision name="collision">
	<geometry>
	  <sphere>
	    <radius>0.075486641</radius>
	  </sphere>
	</geometry>
	<surface>
	  <friction>
	    <ode>
	      <mu>15000</mu>
	      <mu2>5000</mu2>
	    </ode>
	  </friction>
	</surface>
      </collision>
    </link>




    
    <joint type="ball" name="front_ball_joint">
      <child>front_ball</child>
      <parent>chassis</parent>
    </joint>

    <joint type="ball" name="back_ball_joint">
      <child>back_ball</child>
      <parent>chassis</parent>
    </joint>
    
    <joint type="revolute" name="left_wheel_joint">
      <pose>-0.00164212778 0 -0.02887726 0 0 0</pose>
      <child>left_wheel</child>
      <parent>chassis</parent>
      <axis>
	<xyz>0 1 0</xyz>
	<dynamics>
	  <friction>2</friction>
	</dynamics>
      </axis>
    </joint>

    <joint type="revolute" name="right_wheel_joint">
      <pose>-0.00164212778 0 -0.02887726 0 0 0</pose>
      <child>right_wheel</child>
      <parent>chassis</parent>
      <axis>
	<xyz>0 1 0</xyz>
	<dynamics>
	  <friction>2</friction>
	</dynamics>
      </axis>
    </joint>
    
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>${update_rate}</updateRate>
      <leftJoint>left_wheel_joint</leftJoint>
      <rightJoint>right_wheel_joint</rightJoint>
      <wheelSeparation>0.526581624</wheelSeparation>
      <wheelDiameter>0.247650254</wheelDiameter>
      <torque>500</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_footprint</robotBaseFrame>
    </plugin>
  </model>
</sdf>
